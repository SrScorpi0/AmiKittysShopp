generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String    @id
  label     String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id          String   @id
  title       String
  image       String
  images      String[] @default([])
  price       Int
  description String
  material    String
  size        String
  color       String
  stock       Int
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id        String      @id @default(cuid())
  total     Int
  phone     String
  address   String
  message   String?
  status    String      @default("pending")
  items     OrderItem[]
  createdAt DateTime    @default(now())
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  productId String
  title     String
  price     Int
  quantity  Int
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model AdminUser {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}
